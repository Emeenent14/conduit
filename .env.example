# ============================================
# Conduit - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Docker Services
# ============================================

# Main PostgreSQL Database
POSTGRES_USER=conduit
POSTGRES_PASSWORD=conduit_dev_password_change_me
POSTGRES_DB=conduit

# n8n PostgreSQL Database (separate)
N8N_POSTGRES_USER=n8n
N8N_POSTGRES_PASSWORD=n8n_dev_password_change_me
N8N_POSTGRES_DB=n8n

# Redis
REDIS_PASSWORD=redis_dev_password_change_me

# n8n Admin
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=admin_password_change_me
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your-n8n-encryption-key-minimum-32-characters-here

# ============================================
# Backend API (apps/api/.env)
# ============================================

# Server
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://conduit:conduit_dev_password_change_me@localhost:5432/conduit

# Redis
REDIS_URL=redis://:redis_dev_password_change_me@localhost:6379

# n8n API
N8N_API_URL=http://localhost:5678/api/v1
N8N_API_KEY=                    # Get this from n8n Settings â†’ API

# JWT Authentication
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Credential Encryption
# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=your-32-character-encryption-key

# OAuth Providers (optional for MVP)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_CALLBACK_URL=http://localhost:3001/api/v1/credentials/oauth/slack/callback

# Email Notifications (optional)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@conduit.local

# ============================================
# Frontend (apps/web/.env.local)
# ============================================

NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
NEXT_PUBLIC_APP_NAME=Conduit
NEXT_PUBLIC_GOOGLE_CLIENT_ID=        # Same as backend
