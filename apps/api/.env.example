# FlowMatic API Environment Variables
# Copy this file to .env and fill in the values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://flowmatic:your_password@localhost:5432/flowmatic

# ============================================
# Redis
# ============================================
REDIS_URL=redis://:your_redis_password@localhost:6379

# ============================================
# n8n API
# ============================================
N8N_API_URL=http://localhost:5678/api/v1
# Get this from n8n Settings -> API -> Create API Key
N8N_API_KEY=your_n8n_api_key_here

# ============================================
# JWT Authentication
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_at_least_32_characters_long
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================
# Encryption (for storing credentials)
# ============================================
# Generate with: openssl rand -hex 32
# Must be exactly 64 hex characters (32 bytes)
ENCRYPTION_KEY=your_32_byte_encryption_key_in_hex_format

# ============================================
# OAuth Providers (Optional for MVP)
# ============================================

# Google OAuth
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Slack OAuth
# Get from: https://api.slack.com/apps
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_CALLBACK_URL=http://localhost:3001/api/v1/credentials/oauth/slack/callback

# HubSpot OAuth
# Get from: https://developers.hubspot.com/
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=
HUBSPOT_CALLBACK_URL=http://localhost:3001/api/v1/credentials/oauth/hubspot/callback

# ============================================
# Email (Optional - for notifications)
# ============================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@flowmatic.local
